{% extends 'base.html.twig' %}

{% block title %}Blogs index{% endblock %}

{% block body %}
    <h1>Blogs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.titre }}</td>
                <td>{{ blog.description }}</td>
                <td>{{ blog.image }}</td>
                <td>
                    <a href="{{ path('blogs_show', {'id': blog.id}) }}">show</a>
                    <a href="{{ path('blogs_edit', {'id': blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blogs_new') }}">Create new</a>
{% endblock %}
